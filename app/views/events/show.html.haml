%h2= @event.name
%p
  %b Date:
  = @event.start_time
  = "Starting in #{distance_of_time_in_words(Time.now, @event.start_time)})"
%p
  %b Address:
  = @event.location.address
%p
  %b City:
  = @event.location.city
%p
  %b Postcode:
  = @event.location.postcode
%p
  %b Travel Mode:
  = @event.attendances.first.transport_mode
%p

#map-canvas

:javascript
   window.event_location = {
    lat: #{@event.location.latitude},
    lng: #{@event.location.longitude}
    };
   window.starting_location = {
    lat: #{@event.attendances.first.starting_location.latitude},
    lng: #{@event.attendances.first.starting_location.longitude}
    };
  window.transport_mode = '#{@event.attendances.where(creator_id: current_user.id).first.try(:transport_mode)}';
  console.log("transport_mode");
  window.runCalc = true;
#trip_length


= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Back', events_path
